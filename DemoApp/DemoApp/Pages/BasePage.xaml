<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DemoApp.Pages.BasePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:breadcrumb="clr-namespace:Breadcrumb;assembly=Xamarin.Forms.Breadcrumb"
             xmlns:icons="clr-namespace:DemoApp">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <!-- Test -->
            <breadcrumb:Breadcrumb Grid.Row="0"
                                   Padding="15"
                                   BreadcrumbBackgroundColor="Green"
                                   CornerRadius="6"
                                   LastBreadcrumbBackgroundColor="DarkGreen"
                                   LastBreadcrumbCornerRadius="6"
                                   LastBreadcrumbTextColor="LightGreen"
                                   TextColor="White"
                                   VerticalOptions="Start">
                <breadcrumb:Breadcrumb.Separator>
                    <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                     Glyph="{x:Static icons:IconFont.ChevronRight}"
                                     Size="12"
                                     Color="Red" />
                </breadcrumb:Breadcrumb.Separator>
            </breadcrumb:Breadcrumb>

            <!-- Breadcrumb -->
            <breadcrumb:Breadcrumb Grid.Row="1"
                                   Padding="15"
                                   VerticalOptions="Start" />

